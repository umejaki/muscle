<div class="container">
  <h5><%= @user.nick_name %>さんの会員情報編集</h5>
     <h3>会員ID  <%= @user.id %></h3>
      <%= form_with model: @user, url: admin_user_path do |f| %>
        <h3>ニックネーム　　　　　　　<%= f.text_field :nick_name %></h3>
        <h3>メールアドレス　　　　　　<%= f.text_field :email %></h3>
        <h3>退会ステータス
          <%= '　' %><%= f.radio_button :is_deleted, "false" %>
          <%= f.label :is_deleted, "有効" %>
          <%= '　' %><%= f.radio_button :is_deleted, "true" %>
          <%= f.label :is_deleted, "退会" %>
        </h3>
      <%= f.submit '変更を保存する', class: 'btn btn-primary' %>
      <% end %>
</div>