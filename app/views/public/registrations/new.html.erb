<div class="container">
 <div class="row">
   <div class="col-12">
    <h2>新規会員登録</h2>
    
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>
      
      <div class="field form-group" style="padding: 15px 0px; display: flex;" >
        <div><%= f.label :画像 %></div>　　　　　　　　　　　　　 
        <div><%= f.file_field :image, accept: "image/*" %></div>
      </div>
      
      <div class="field form-group" style="padding: 15px 0px; display: flex;" >
        <div><%= f.label :ニックネーム %>(3~15文字)</div>　　 　　 
        <div><%= f.text_field :nick_name %></div>
      </div>
      
      <div class="field form-group" style="padding: 15px 0px; display: flex;" >
        <div><%= f.label :メールアドレス %></div>　　　　　　　　
        <div><%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
      </div>
      
      <div class="field form-group" style="padding: 15px 0px; display: flex;" >
        <div><%= f.label :パスワード %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %></div>　　　　 <div><%= f.password_field :password, autocomplete: "new-password" %></div>
      </div>
    
      <div class="field form-group" style="padding: 15px 0px; display: flex;" >
        <div><%= f.label :パスワード（確認用） %></div>
        <div style="padding-left: 70px"><%= f.password_field :password_confirmation, autocomplete: "new-password" %></div>
      </div>
    
      <div class="actions">
        <%= f.submit "新規登録", class: 'btn btn-success' %>
      </div>
    <% end %>
    
   </div>
 </div>
</div>
