<div class="container">
 <div class="row">
   <div class="col-12">
    <h2>新規会員登録</h2>
    
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>
      
      <div class="field">ニックネーム<%= f.label :ニックネーム %>　　　 <%= f.text_field :nick_name %></div>
      
      <div class="field"><%= f.label :メールアドレス %>　　　 　　　　　<%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
      
      <div class="field">
        <%= f.label :パスワード %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %>　　　　 <%= f.password_field :password, autocomplete: "new-password" %>
      </div>
    
      <div class="field"><%= f.label :パスワード（確認用） %>　　　　　<%= f.password_field :password_confirmation, autocomplete: "new-password" %></div>
    
      <div class="actions">
        <%= f.submit "新規登録", class: 'btn btn-success' %>
      </div>
    <% end %>
   </div>
 </div>
</div>
