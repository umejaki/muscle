<div class="container">
  <h2><%= @user.nick_name %>さんの会員情報編集</h2>
  
      <% if @user.errors.any? %>
        <div id="error_explanation" class="alert alert-danger">
          <% @user.errors.full_messages.each do |message| %>
            <li><%= flash[:alert] %></li>
          <% end %>
        </div>
      <% end %>
    
      <%= form_with model: @user, url: user_edit_path do |f| %>
      
        <h3>ニックネーム　　　　　　　<%= f.text_field :nick_name %></h3>
        
        <h3>メールアドレス　　　　　　<%= f.text_field :email %></h3>
        
      <%= f.submit '変更を保存する', class: 'btn btn-primary' %>
      <% end %>
</div>
